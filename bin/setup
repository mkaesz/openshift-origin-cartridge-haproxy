#!/bin/bash -eu

case "$1" in
  -v|--version)
    version="$2"
esac

echo "$version" > "$OPENSHIFT_KDEHAPROXY_DIR/env/OPENSHIFT_HAPROXY_VERSION"

mkdir -p $OPENSHIFT_KDEHAPROXY_DIR/{conf,run,sessions,var/lock/subsys}

